<% layout('layout') -%>


<div class ="container">
    <br/>
    
    <div class ="row">
        <% for (var i = 0; i < products.length; i++) { %>
        <div class = "col-md-3">
            <a href = "/product/<%=products[i]._id %>">
            <div class = "thumbnail">
                <img src = "<%= products[i].image %>">
                <div class = "caption">
                    <h3><%= products[i].name %></h3>
                    <p><%= products[i].category.name %></p>
                    <h3><%= products[i].price %></h3>
                </div>
            </div>
            </a>
        </div>
        <% } %>
    </div>

    <br/>
</div>